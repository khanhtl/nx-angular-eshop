{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2022",
    "module": "esnext",
    "lib": ["es2023", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@es-libs/cart/data-access/cart": [
        "libs/cart/data-access/cart/src/index.ts"
      ],
      "@es-libs/cart/feature/cart": ["libs/cart/feature/cart/src/index.ts"],
      "@es-libs/home/feature/layout": ["libs/home/feature/layout/src/index.ts"],
      "@es-libs/product/data-access/category": [
        "libs/product/data-access/category/src/index.ts"
      ],
      "@es-libs/product/data-access/product": [
        "libs/product/data-access/product/src/index.ts"
      ],
      "@es-libs/product/feature/product": [
        "libs/product/feature/product/src/index.ts"
      ],
      "@es-libs/product/ui/components": [
        "libs/product/ui/components/src/index.ts"
      ],
      "@eshop/workspace-generators-plugin": [
        "tools/workspace-generators-plugin/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
